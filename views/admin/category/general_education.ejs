


     
<%- include('../partials/header'); %>
<link rel="stylesheet" href="/css/manage_questions.css">
 
<body>
  <!--Main Navigation-->
  <%- include('../partials/sidebar'); %>
  <!--Main Navigation-->
    

  <main style="margin-top: 58px;" >
    <div class="container pt-4">
        

      

        <div class="row">
          
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"> <a href="/admin/manage_questions">Category</a></li>
              <li class="breadcrumb-item">General Education</li>
             
            </ol>
          </nav>





          <% title.forEach((data) => { %>
            <div class="col-12 col-sm-3 reviewerBox" style="padding: 20px;">
                   <p> Reviewer for <%= data.title %></p>
                   <div class="boxOne">
                    <a href="/quiz/category/quiztitle/<%= data._id %>" class="btn btn-primary" style="margin: 10px;">View</a>   
                  
                    <a href="/quiz/category/quiztitle/<%= data._id %>/delete" class="btn btn-danger" style="margin: 10px;">Delete</a>   
                    
                  
                   

                   
                  
                  </div> 
            </div>
            <%  }) %>
            
            
        </div>
        <div class="row">
          <div class="col-6">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
                Add new reviewer
              </button>
        </div>
        </div>

      
        
    </div>
</main>
   







<script src="/js/user.js">

</script>
<%- include('../partials/footer'); %>





    












    <!-- Modal Area --> 
    

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add new reviewer:</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <!--  content  -->
                <form action="/quiz/gen_ed/add_title" method="POST">
                    <div class="form-group">
                        <label for="category">Category</label>
                        <input type="text" name="category" id="category" class="form-control" value="General Education" readonly>
                    </div>
                    <div class="form-group">
                        <label for="title">Reviewer Title</label>
                        <input type="text" name="title" id="title" class="form-control" placeholder="Enter reviewer title...">
                    </div>
                

            
           

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button class="btn btn-default btn-success" type="submit" value="Submit">Save</button>
                  </div>
               </form>
      
    </div>
  </div>
    <!-- Modal End -->



     <!-- Modal -->
     <div class="modal fade" id="deleteMOdal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"> Confirm</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
                Deleting this Reviewer will delete all the questions inside this reviewer title

              
             
          </div>
          <div class="modal-footer">
            <input type="submit" value="Delete" class="btn btn-danger">
            
          </form>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>






</body>
</html>